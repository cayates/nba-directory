<head>
    <link rel="stylesheet" href="styles.css">  
</head>  
{{#playersLoad}}
<div class="playerCard">
    <h1 class="name">{{name}}</h1>
    <h2>Nickname: {{nickname}}</h2>
        <img src="{{avatar}}">
    <div class="stats">
        <h3>Titles: {{titles}}</h3>
        <h3>Team(s): {{teams}}</h3>
    </div>
</div>
    <form class = "deletePlayerForm" action="/deleteplayer/{{id}}" method="POST">          
        <input type="submit" name="_id" value="Delete Player"> 
    </form>      
    <form class = "editPlayerForm" action="/editplayer/{{id}}" method="POST">  
        <input type="submit" name="_id" value="Edit Player">   
    </form> 
{{/playersLoad}}
    