<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Player</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <main>
      {{#playersLoad}}
        <form class = "editPlayerForm" action="/editplayer/{{_id}}" method="POST">
            <input type="text" name="name" value="{{name}}">
            <input type="text" name="position" value="{{position}}">
            <input type="text" name="teams" value="{{teams}}">
            <input type="text" name="nickname" value="{{nickname}}">
            <input type="text" name="titles" value="{{titles}}">
            <input type="text" name="avatar" value="{{avatar}}">
            <hr>
            <input type="submit" name="" value="Edit this player">
      </form>
      {{/playersLoad}}
    </main>
    <a href = "http://localhost:3000/players">Return to Home Page</a>          
  </body>
</html>